{{#if errors}}
{{#each errors}}
<div class="alert alert-danger">{{msg}}</div>
{{/each}}
{{/if}}
<form method="post" action="/users/update" enctype="multipart/form-data" />
{{!-- <input type="hidden" , name="_method" , value="PUT"> --}}
<div class=" form-group">
    <label>Full Name</label>
    <input class="form-control" name="username" value="{{user.username}}">
</div>
<div class="form-group">
    <label>Email</label>
    <input class="form-control" name="email" value="{{user.email}}">
</div>
<div class="form-group">
    <label>Contact Number</label>
    <input class="form-control" name="contact" value="{{user.contact}}" oncopy="return false" oncut="return false"
        maxlength="10" onpaste="return false" onkeypress="return isNumberKey(event)">
</div>
<div class="form-group">
    <label>Age</label>
    <input type="number" class="form-control" name="age" placeholder="Age" value="{{user.age}}">
</div>
<div class="form-group">
    <label>Address</label>
    <input type="text" class="form-control" name="address" placeholder="Address" value="{{user.address}}">
</div>
<div class="form-group">
    <label>Company</label>
    <input type="text" class="form-control" name="company" placeholder="Company" value="{{user.company}}">
</div>
<img src="/users/image/{{user.img}}" class="images" height="100" width="100" /><br>
<input type="file" name="file" id="file1"><br>
<button type="submit" class="btn btn-default">Submit</button>
</form>